<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.result.ResultActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/result_image"
        android:layout_width="249dp"
        android:layout_height="229dp"
        android:layout_marginTop="44dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_place_holder"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="318dp"
        android:layout_height="74dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_rectangle_big"
        android:text="@string/result"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_image" />

    <TextView
        android:id="@+id/tv_result"
        style="@style/TextView.PoppinsRegular16spdark"
        android:layout_width="289dp"
        android:layout_height="87dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/shape_rectangle_big"
        android:lines="4"
        android:maxLines="4"
        android:singleLine="false"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_result"
        app:layout_constraintVertical_bias="0.164" />

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:srcCompat="@drawable/ic_result_a" />


</androidx.constraintlayout.widget.ConstraintLayout>